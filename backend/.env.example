# Backend Environment Configuration
NODE_ENV=development

# Database
DATABASE_URL=postgresql://multimedia_user:multimedia_password@localhost:5432/multimedia_db?connection_limit=10&pool_timeout=20
DB_HOST=localhost
DB_PORT=5432
DB_USER=multimedia_user
DB_PASSWORD=multimedia_password
DB_NAME=multimedia_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Database Connection Pooling
# Maximum number of connections in the pool
DB_CONNECTION_LIMIT=10
# Time (in seconds) to wait for a connection from the pool
DB_POOL_TIMEOUT=20
# Enable connection pooling for production (recommended)
DB_ENABLE_POOLING=true

# JWT Configuration
# CRITICAL SECURITY: Generate a strong random secret (minimum 32 characters)
# Generate using: openssl rand -base64 64
# NEVER commit actual secrets to version control
# NEVER use the default value in production
# Example (DO NOT USE): JWT_SECRET=L8q5X2w9p6B3m7N4k1J8h5G2f9D6c3A0z7Y4x1W8v5U2t9R6q3P0n7M4l1K8j5H2g9F6
JWT_SECRET=PLEASE_REPLACE_WITH_CRYPTOGRAPHICALLY_RANDOM_SECRET_MINIMUM_32_CHARS
JWT_EXPIRATION=86400

# Bcrypt Configuration
# Number of salt rounds for password hashing (recommended: 10-14)
# Higher values increase security but slow down hashing
# Default: 12 (good balance between security and performance)
BCRYPT_SALT_ROUNDS=12

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=multimedia

# Meilisearch
MEILI_HOST=localhost
MEILI_PORT=7700
MEILI_API_KEY=

# CORS
CORS_ORIGIN=http://localhost:3000

# API
API_PORT=3000
API_HOST=0.0.0.0
API_VERSION=v1

# Environment
LOG_LEVEL=debug
