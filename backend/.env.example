# Backend Environment Configuration
NODE_ENV=development

# Database
DATABASE_URL=postgresql://multimedia_user:multimedia_password@localhost:5432/multimedia_db?connection_limit=10&pool_timeout=20
DB_HOST=localhost
DB_PORT=5432
DB_USER=multimedia_user
DB_PASSWORD=multimedia_password
DB_NAME=multimedia_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Database Connection Pooling
# Maximum number of connections in the pool
DB_CONNECTION_LIMIT=10
# Time (in seconds) to wait for a connection from the pool
DB_POOL_TIMEOUT=20
# Enable connection pooling for production (recommended)
DB_ENABLE_POOLING=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=multimedia

# Meilisearch
MEILI_HOST=localhost
MEILI_PORT=7700
MEILI_API_KEY=

# CORS
CORS_ORIGIN=http://localhost:3000

# API
API_PORT=3000
API_HOST=0.0.0.0
API_VERSION=v1

# Environment
LOG_LEVEL=debug
