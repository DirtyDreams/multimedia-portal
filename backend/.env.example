# Backend Environment Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://multimedia_user:multimedia_password@localhost:5432/multimedia_db?connection_limit=10&pool_timeout=20
DB_HOST=localhost
DB_PORT=5432
DB_USER=multimedia_user
DB_PASSWORD=multimedia_password
DB_NAME=multimedia_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Database Connection Pooling
# Maximum number of connections in the pool
DB_CONNECTION_LIMIT=10
# Time (in seconds) to wait for a connection from the pool
DB_POOL_TIMEOUT=20
# Enable connection pooling for production (recommended)
DB_ENABLE_POOLING=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-long-random-string
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-use-long-random-string
JWT_REFRESH_EXPIRATION=7d

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600
REDIS_URL=redis://localhost:6379

# Analytics
# Redis database for analytics (0-15, keep separate from cache)
REDIS_ANALYTICS_DB=2
# Salt for privacy-friendly session hashing (change in production!)
ANALYTICS_SALT=your-analytics-salt-change-in-production-use-long-random-string
# Days to retain analytics data
ANALYTICS_RETENTION_DAYS=90

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=multimedia-portal

# Meilisearch
MEILI_HOST=http://localhost
MEILI_PORT=7700
MEILI_MASTER_KEY=your-meilisearch-master-key
MEILI_API_KEY=

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Configuration
API_PORT=4000
API_HOST=0.0.0.0
API_VERSION=v1

# API Documentation (Swagger/OpenAPI)
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs
API_TITLE="Multimedia Portal API"
API_DESCRIPTION="API for Multimedia Portal"

# Rate Limiting
# TTL in milliseconds (900000 = 15 minutes)
THROTTLE_TTL=900000
# Maximum requests per TTL window
THROTTLE_LIMIT=1000

# File Upload
# Maximum file size in bytes (10485760 = 10MB)
MAX_FILE_SIZE=10485760
# Allowed MIME types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@multimedia-portal.com

# Logging
LOG_LEVEL=debug
