# Frontend Environment Configuration
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Application
NEXT_PUBLIC_APP_NAME=Multimedia Portal
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Features
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_RATINGS=true

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Upload
NEXT_PUBLIC_MAX_UPLOAD_SIZE=104857600
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
NEXT_PUBLIC_ALLOWED_VIDEO_TYPES=video/mp4,video/webm

# Analytics (if enabled)
NEXT_PUBLIC_GTAG_ID=
NEXT_PUBLIC_SENTRY_DSN=
